		<Label Content="neues Buch hinzüfügen:" HorizontalAlignment="Left" Height="28" Margin="10,54,0,0" VerticalAlignment="Top" Width="136"/>

		<Button Content="Neues Buch" HorizontalAlignment="Left" Margin="10,233,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ClickSave}"/>
